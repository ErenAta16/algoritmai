# AI Algorithm Consultant - Environment Variables
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.3

# CORS Security
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_WINDOW=60

# Server Configuration
HOST=0.0.0.0
PORT=5000
DEBUG=false
LOG_LEVEL=info

# Security
SECRET_KEY=your_secret_key_here_minimum_32_characters
TRUSTED_HOSTS=localhost,127.0.0.1

# JWT Authentication
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Default Admin User (change in production)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_EMAIL=admin@algoritma.com

# Database (for future use)
DATABASE_URL=sqlite:///./algorithm_consultant.db

# Monitoring
ENABLE_ANALYTICS=true
SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
ENABLE_CACHING=true
ENABLE_BACKGROUND_TASKS=true
ENABLE_DETAILED_LOGGING=true 